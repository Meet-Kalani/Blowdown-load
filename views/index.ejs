<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
        integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <title>Blowdown-load | Download Youtube Video and Audio</title>
</head>

<body>
    <canvas class="background"></canvas>
    <section class="navigation-bar py-4">
        <div class="d-flex justify-content-between">
            <div>
                <a class="ml-4 logo" href="/">Blowdown-load</a>
            </div>
            <div class="text-right">
                <a href="/contact" class="mr-4">Contact</a>
            </div>
        </div>
    </section>

    <section class="msg">
        <h2>Thanks for downloading!</h2>
        <p>Your download will start in a few seconds</p>
    </section>

    <section id="hero" class="w-100">
        <div class="container h-100 w-100">
            <div class="download-input h-100 w-100">
                <form action="/download" method="POST">
                    <input class="form-control form-control-lg py-0 blackish mx-auto" type="text" name="url"
                        placeholder="Paste your youtube link here...">
                    <div class="d-flex justify-content-center">
                        <div class=""><button type="submit" value="video" onclick="msgDisplay()" name="cta"
                                class="blackish btn btn-primary mt-3 mr-2 w-100">Download Video</button></div>
                        <div class=""><button type="submit" value="audio" onclick="msgDisplay()" name="cta"
                                class="blackish btn btn-primary mt-3 ml-2 w-100">Download Audio</button></div>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <footer class="fixed-bottom">
        <p>meetkalani2002@gmail.com</p>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/particlesjs/2.2.2/particles.min.js"></script>

    <script>
        window.onload = function () {
            Particles.init({
                selector: '.background',
                color: ['blue', 'black', 'white'],
                sizeVariations: 10,
                maxParticles: 250,
                speed: 1,
                responsive: [
                    {
                        breakpoint: 768,
                        options: {
                            maxParticles: 150
                        }
                    }, {
                        breakpoint: 425,
                        options: {
                            maxParticles: 70
                        }
                    }, {
                        breakpoint: 320,
                        options: {
                            maxParticles: 50
                        }
                    }
                ]
            });
        };
    </script>

    <script>
        function msgDisplay() {
            let msg = document.querySelector('.msg');
            msg.style.display = 'block';
        }
    </script>

    <!-- Option 2: jQuery, Popper.js, and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"></script>
    <style>
        * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html,
body {
    height: 100%;
    background: yellow;
    z-index: 1;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
}

#hero {
    margin: 0;
    position: absolute;
    
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.background {
    position: absolute;
    display: block;
    top: 0;
    left: 0;
    z-index: 0;
}

.navigation-bar {
    background: #343a40;
    z-index: 1;
    position: absolute;
    width: 100%;
    color: yellow;
}

.navigation-bar a {
    text-decoration: none;
    color: yellow;
    display: inline-block;
    font-size: large;
}

.navigation-bar a:after {
    content: '';
    display: block;
    width: 0;
    height: 2px;
    background: yellow;
    transition: width .3s;
}

.navigation-bar a:hover::after {
    width: 100%;
}

.logo {
    padding-left: 15px;
    padding-right: 15px;
    color: #343a40 !important;
    background: yellow;
}

.blackish {
    background: #343a40;
}

.btn {
    border: none;
    box-shadow: 1px 3px 5px #343a40;
    color: yellow;
}

.btn:hover,
.btn:focus {
    background: #343a40;
    box-shadow: 1px 3px 5px #343a40;
    color: yellow;
}

.form-control-lg {
    border: none;
    box-shadow: 1px 3px 5px #343a40;
    color: yellow;
    width: 50%;
}

.form-control-lg:focus {
    background: #343a40;
    color: yellow;
}

footer p {
    color: yellow;
    text-align: center;
    background: #343a40;
    padding: 15px
}

footer {
    margin-bottom: -17px;
}

.msg {
    display: none;
    position: absolute;
    margin-top: 190px;
    width: 100%;
    text-align: center;
}

@media(max-width: 780px){
    .form-control-lg{
        width: 100%;
    }
}
    </style>
</body>

</html>
